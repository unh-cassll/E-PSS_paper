	note = {Publisher: Nature Publishing Group},
	keywords = {Atmospheric dynamics, Attribution},
	pages = {1--13},
}

@article{Eicken2021,
	title = {Connecting {Top}-{Down} and {Bottom}-{Up} {Approaches} in {Environmental} {Observing}},
