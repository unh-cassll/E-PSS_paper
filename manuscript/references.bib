	number = {8},
	journal = {Journal of Physical Oceanography},
	author = {Fisher, Alexander W. and Sanford, Lawrence P. and Scully, Malcolm E. and Suttles, Steven E.},
	year = {2017},
	pages = {1921--1939},
}

@article{Gerbi2009,
