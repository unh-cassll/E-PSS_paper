	year = {2021},
	note = {Publisher: Institute of Electrical and Electronics Engineers Inc.},
	keywords = {Backscatter, Doppler effect, Doppler radar, Radar, Radar antennas, Radar imaging, Sea surface, marine radar, remote sensing, sea surface electromagnetic scattering, surface waves, wave breaking.},
}

