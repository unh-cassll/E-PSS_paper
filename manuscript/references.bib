	keywords = {Dynamical downscaling, Propagation, Spectrum, Statistical downscaling, Wave climate, Wave energy flux, Wave modelling},
	pages = {1181--1191},
}

@article{Varlas2018,
	title = {Implementation of a two-way coupled atmosphere-ocean wave modeling system for assessing air-sea interaction over the {Mediterranean} {Sea}},
