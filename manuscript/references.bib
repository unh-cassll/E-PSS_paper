	urldate = {2021-12-31},
	journal = {Environmental Research Letters},
	author = {Hauser, Donna D.W. and Whiting, Alex V and Mahoney, Andrew R. and Goodwin, John and Harris, Cyrus and Schaeffer, Robert J and Schaeffer Sr, Roswell and Laxague, Nathan J. M. and Subramaniam, Ajit and Witte, Carson R. and Betcher, Sarah and Lindsay, Jessica M. and Zappa, Christopher J.},
	month = aug,
