	journal = {Nature},
	author = {Agrawal, Y. C. and Terray, Eugene A. and Donelan, Mark A. and Hwang, Paul A. and Williams, A. J. and Drennan, William M. and Kahma, Kimmo K. and Kitaigorodskii, Sergei A.},
