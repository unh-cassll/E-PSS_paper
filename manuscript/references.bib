	keywords = {coastal modeling, surface waves, wave-current interaction},
	pages = {9889--9905},
}

@article{hao_novel_2022,
	title = {A {Novel} {Machine} {Learning} {Method} for {Accelerated} {Modeling} of the {Downwelling} {Irradiance} {Field} in the {Upper} {Ocean}},
