	author = {Stroeve, Julienne and Vancoppenolle, Martin and Veyssiere, Gaelle and Lebrun, Marion and Castellani, Giulia and Babin, Marcel and Karcher, Michael and Landy, Jack C. and Liston, Glen E. and Wilkinson, Jeremy},
