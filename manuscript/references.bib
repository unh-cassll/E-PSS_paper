@article{do_turbulence_2024,
	title = {Turbulence over young wind waves dominated by capillaries and micro-breakers},
	volume = {985},
	issn = {0022-1120, 1469-7645},
	url = {https://www.cambridge.org/core/journals/journal-of-fluid-mechanics/article/turbulence-over-young-wind-waves-dominated-by-capillaries-and-microbreakers/49667FB89828F8C6375E3B6EC7AAE2B8},
